.bienvenida
	img
		max-width 290px
	p:last-child
		margin-bottom 0
#carousel
	height 260px
	overflow hidden
	padding 0
	.carousel-inner
		min-height 100%
	.carousel-control
		cursor pointer
		width 10%
	.carousel-indicators li
		transition 300ms
	.description
		background rgba(0, 0, 0, .7)
		color white
		height 80px
		padding 0 1em
		position absolute
		top 200px
		width 100%
	.flecha img
		position relative
		top 40%
		width 12px
	.item //Elemento del carousel
		min-height 260px
		img
			min-height 260px
			width 100%
.noticias
	.noticia
		background-size cover !important
		cursor pointer
		display block
		height 140px
		float none
		margin-bottom 1.5em
		overflow hidden
		position relative
		transition 300ms
		.info
			background rgba(0, 0, 0, .7)
			color white
			display block
			height 100%
			opacity 0
			padding 0em
			transition 250ms ease-in-out
			width 100%
			&:hover
				opacity 1
			p
				bottom 0
				padding 12px
				position absolute
				text-align center
				width 100%
	.mas
		display block
		margin-top -12px

@media screen and (max-width 480px)
	#carousel
		height 180px