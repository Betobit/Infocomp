.bienvenida img
	max-width 290px
#carousel
	height 260px
	overflow hidden
	padding 0
	.carousel-inner
		min-height 100%
	.carousel-control
		cursor pointer
	.carousel-indicators li
		transition 300ms
	.description
		background rgba(0, 0, 0, .7)
		color white
		height 80px
		padding 0 1em
		position absolute
		top 200px
		width 100%
	.item //Elemento del carousel
		min-height 160px
		img
			min-height 160px
			width 100%
.noticias
	padding 5px 15px 15px 15px
	.noticia
		background #D2D7D3
		display inline-block
		height 140px
		float none
		margin 0
		margin-right 1%
		width 48%