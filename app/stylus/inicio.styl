.bienvenida img
	max-width 290px
#carousel
	height 260px
	overflow hidden
	padding 0
	.carousel-inner
		min-height 100%
	.carousel-control
		cursor pointer
	.carousel-indicators li
		transition 300ms
	.description
		background rgba(0, 0, 0, .7)
		color white
		height 80px
		padding 0 1em
		position absolute
		top 200px
		width 100%
	.item //Elemento del carousel
		min-height 260px
		img
			min-height 260px
			width 100%
.noticias
	padding 5px 15px 15px 15px
	.noticia
		background #D2D7D3
		cursor pointer
		display inline-block
		height 140px
		float none
		margin 0
		margin-right 1%
		overflow hidden
		position relative
		width 48%
		img
			float left
			min-height 140px
			transition 250ms ease-out
			width 100%
		&:hover img
			transform scale(1.1)
		.info
			background rgba(0, 0, 0, .7)
			bottom 0
			color white
			opacity 0
			padding 1em
			position absolute
			top 0
			transition 250ms ease-in-out
			width 100%
			&:hover
				opacity 1